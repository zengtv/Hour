/* components/index/one/index.wxss */

.one-container {
    width: 100%;
    display: inline-flex;
    flex-direction: column;
    align-items: center;
}

.img-container {
    width: 100%;
    height: 500rpx;
    margin-bottom: 24rpx;
}

.img-container image {
    width: 100%;
    height: 100%;
}

.picture-author {
	margin-bottom: 60rpx;
    line-height: 20rpx;
    text-align: center;
    font-size: 24rpx;
    color: #969696;
    opacity: 0.8;
}

.content {
	display: block;
	max-width: 590rpx;
	margin-bottom: 60rpx;
	line-height: 50rpx;
	color: #666;
	font-size: 28rpx;
}

.text-authors {
	display: block;
    line-height: 20rpx;
	margin-bottom: 20rpx;
    font-size: 24rpx;
    color: #969696;
    opacity: 0.8;
}

.handle {
	display: inline-flex;
	width: 100%;
	flex-direction: row-reverse;
}