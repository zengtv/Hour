/* components/index/share/index.wxss */
.share {
	display: block;
	width: 60rpx;
	height: 60rpx;
	line-height: 50rpx;
	margin-right: 20rpx;
	padding: 10rpx;
	border: none;
	border-radius: 0;
	background-color: #fff;
}
.share::after {
	display: none;
}

.share image {
	display: inline-block;
	width: 32rpx;
	height: 32rpx;
}